<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContactActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/backToMain2"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Új kontakt hozzáadása"
        android:textSize="26dp"

        />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Vezetéknév"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastNameEditText"
        android:layout_alignEnd="@id/lastNameEditText"
        android:ems="10"
        android:hint="Keresztnév"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstNameEditText"
        android:layout_alignEnd="@id/firstNameEditText"
        android:ems="10"
        android:hint="Telefonszám"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emailAddressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumberEditText"
        android:layout_alignEnd="@id/phoneNumberEditText"
        android:ems="10"
        android:hint="Email cím"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailAddressEditText"
        android:layout_alignEnd="@id/emailAddressEditText"
        android:ems="10"
        android:hint="Lakcím"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/birthdayEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressEditText"
        android:layout_alignEnd="@id/addressEditText"
        android:ems="10"
        android:hint="Születésnap"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addRelationshipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthdayEditText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Kapcsolat kiválasztása" />

    <Button
        android:id="@+id/addContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRelationshipButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Kontakt hozzáadása" />




</RelativeLayout>